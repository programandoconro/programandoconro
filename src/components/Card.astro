---
export interface Props {
  href: string;
  logo: string;
  logoWidth?: number;
  logoHeight?: number;
  id?: string;
}

const { href, logo, logoWidth = 100, id, logoHeight = 100 } = Astro.props as Props;
---

<div class="link-card">
  <a href={href} target="_blank">
    <h2>
      {
        logo ? (
          <img src={logo} alt={logo} width={logoWidth} height={logoHeight} />
        ) : null
      }
    </h2>
    <p id={id}></p>
  </a>
</div>
<style>
  :root {
    --link-gradient: linear-gradient(
      45deg,
      var(--astro-orange),
      var(--astro-blue),
      var(--color-border)
    );
  }
  li {
  }

  .link-card {
    list-style: none;
    display: flex;
    padding: 0.15rem;
    background-image: var(--link-gradient);
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1em 1.3em;
    border-radius: 0.35rem;
    color: var(--astro-white);
    background-color: var(--astro-dark-gray);
    opacity: 0.9;
  }

  h2 {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    text-align: center;
  }

  p {
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  h2 span {
    display: inline-block;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-color: var(--astro-orange);
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: var(--astro-black);
  }
</style>
