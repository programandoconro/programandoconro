---
interface Props {
  title?: string;
  id?: string;
}

const { title, id } = Astro.props as Props;
---

<section>
  <p class="banner" id={id}>{title}</p>
  <slot />
</section>

<style>
  .banner {
    line-height: 1.6;
    margin: 1.5rem 0;
    background: var(--astro-blue);
    padding: 1rem;
    border-radius: 0.4rem;
    color: var(--astro-white);
  }
  section {
    font-family: 'Nerko One', 'Noto Serif JP', serif;
    justify-content: center;
    display: grid;
  }
  p{
    font-family: 'Anton', sans-serif;

  }

  @media screen and (min-width: 100px) {
    section {
      font-size: 22px;
    }
  }
  @media screen and (min-width: 500px) {
    section {
      font-size: 24px;
    }
  }
  @media screen and (min-width: 700px) {
    section {
      font-size: 26px;
    }
  }
  @media screen and (min-width: 800px) {
    section {
      font-size: 28px;
    }
  }
</style>
