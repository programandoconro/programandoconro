---
interface Props {
  title?: string;
  id?: string;
}

const { title, id } = Astro.props as Props;
---

<section>
  <p class="banner" id={id}>{title}</p>
  <slot />
</section>

<style>
  .banner {
    line-height: 1.6;
    margin: 1.5rem 0;
    background: var(--astro-blue);
    padding: 1rem;
    border-radius: 0.4rem;
    color: var(--astro-white);
    margin-top: 6rem;
  }
  section {
    font-family: 'Nerko One', 'Noto Serif JP', serif;
    display: grid;
  }
  p{
    font-family: 'Press Start 2P', cursive;

  }

  @media screen and (min-width: 100px) {
    section {
      font-size: 20px;
    }
    .banner {
      margin-top: 2rem;

    }
  }
  @media screen and (min-width: 500px) {
    section {
      font-size: 22px;
    }
    .banner {
      margin-top: 4rem;

    }
  }
  @media screen and (min-width: 700px) {
    section {
      font-size: 24px;
    }
    .banner {
      margin-top: 4rem;

    }
  }
  @media screen and (min-width: 800px) {
    section {
      font-size: 26px;
    }
    .banner {
      margin-top: 6rem;

    }
  }
</style>
